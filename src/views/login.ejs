<%- include('templates/generalHeader'); -%>
<script>
    let display = function flashDisplay() {
        let flashComponent = document.getElementById('flashDisplay');
        let flashMessage = flashComponent.getAttribute('flash');
        if (flashMessage.length > 0) {
            flashComponent.innerHTML = `<alert id="custom-alert" role="alert" class="alert alert-danger">${flashMessage}</alert>`
        }
    }
    window.onload = display;
</script>

<body>
    <%- include('templates/scriptsection'); -%>
    <img src="/BugtraceLogo.gif" class="d-inline-block align-top">
    <image id="logo" src="/transparentBug.png"></image>
    <form method="POST" action="/auth/login">
        <div class="account-form">
            <h3 class="account-title"><strong>Log in to Bugtrace</strong></h3>
            <div class="form-group">
                <input type="text" name="username" class="form-control" placeholder="Enter username" />
            </div>

            <div class="form-group">
                <input type="password" name="password" class="form-control" placeholder="Enter password" />
            </div>

            <input type="submit" value="Login" class="btn btn-block btn-success" />
        </div>
    </form>
    <div id="flashDisplay" class="row" flash="<%=error%>">
    </div>
</body>